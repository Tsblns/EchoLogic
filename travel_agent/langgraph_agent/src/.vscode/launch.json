{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run current file (venv + .env)",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "externalTerminal",
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env",
      "env": { "PYTHONPATH": "${workspaceFolder}" },
      "python": "${workspaceFolder}\\.venv\\Scripts\\python.exe"
    }
  ]
}
